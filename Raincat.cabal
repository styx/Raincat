data-dir:               ""
extra-source-files:     Setup.lhs

executable              raincat
    main-is:            Main.hs
    buildable:          True
    ghc-options:        -Wall
    hs-source-dirs:     src
    build-depends:
                        base >= 3 && < 5,
                        containers,
                        extensible-exceptions,
                        mtl,
                        random,
                        time,
                        GLUT,
                        OpenGL,
                        sdl2,
                        sdl2-image,
                        sdl2-mixer
    other-modules:
                        Cat.Cat
